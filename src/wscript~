#!/usr/bin/python

def build(bld):
      bld.shlib(source       = 'lcsgd.cc',
                name         = 'lcsgd',
                target       = 'lcsgd',
                includes     = '.')

      bld.program(source     = 'main.cc',
                  name       = 'lcsgd_main',
                  target     = 'lcsgd_main',
                  use        = 'lcsgd')
